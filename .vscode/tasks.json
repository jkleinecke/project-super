{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "BuildMainPlatform",
			"windows":{
				"command": "src/win32/build.bat"
			},
			"osx": {
				"command": "src/macos/build_mac.sh",
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile",
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "BuildShaders",
			"windows":{
				"command": "${workspaceFolder}/data/build.bat"
			},
			"osx": {
				"command": "${workspaceFolder}/data/build.sh"
			},
			"options": {
				"cwd": "${workspaceFolder}/data"
			},
			"problemMatcher": [
				"$msCompile",
				"$gcc"
			],
			"group": "build"
		}
	]
}